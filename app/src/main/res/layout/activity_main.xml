<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="560dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.example.like.tibetan.TiBenView
        android:id="@+id/select_word_view"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        />
    <net.app.tibetan.view.LatinKeyboardView
        android:id="@+id/add_keyboard_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:keyBackground="@drawable/input_keyboard_selector"
        />
    <net.app.tibetan.view.DrawView
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:visibility="gone"
        />
</LinearLayout>