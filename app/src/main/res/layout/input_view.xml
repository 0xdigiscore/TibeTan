<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="560dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <net.app.tibetan.view.DrawView
        android:id="@+id/draw"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:background="#CCCCCC"
        android:layout_margin="0dp"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_below="@id/draw"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/relativeLayout">
        <net.app.tibetan.view.LatinKeyboardView
            android:layout_margin="0dp"
            android:id="@+id/add_keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="280dip"
            android:background="#CCCCCC"
            android:padding="0dp"
            android:keyBackground="@color/key_color"
            />
    </RelativeLayout>
    <com.example.like.tibetan.TiBenView
        android:id="@+id/select_word_view"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background="#CCC"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout"
        android:visibility="gone"
        />
</RelativeLayout>