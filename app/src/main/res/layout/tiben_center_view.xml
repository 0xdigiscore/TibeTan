<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_center1"
        android:layout_width="@dimen/tiben_btn_width"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="@drawable/tiben_left_btn_selector"
        android:layout_marginTop="0.5dp"
        android:layout_marginLeft="4dp"
        />
    <Button
        android:id="@+id/btn_center2"
        android:layout_width="@dimen/tiben_btn_width"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="@drawable/tiben_left_btn_selector"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        />
    <Button
        android:id="@+id/btn_center3"
        android:layout_width="34dp"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="@drawable/tiben_left_btn_selector"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        />
    <Button
        android:id="@+id/btn_center"
        android:layout_width="@dimen/tiben_btn_height"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        />
    <Button
        android:id="@+id/btn_center4"
        android:layout_width="@dimen/tiben_btn_width"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="@drawable/tiben_right_btn_selector"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        />
    <Button
        android:id="@+id/btn_center5"
        android:layout_width="34dp"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="@drawable/tiben_right_btn_selector"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        />
    <Button
        android:id="@+id/btn_center6"
        android:layout_width="@dimen/tiben_btn_width"
        android:layout_height="@dimen/tiben_btn_height"
        android:padding="0dp"
        android:background="@drawable/tiben_right_btn_selector"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        />
</LinearLayout>